

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:padding="0px"

    tools:context=".Index">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:background="@color/white"
        android:id="@+id/Title"
        android:text="PORKIMETRO"
        android:gravity="center"
        android:layout_margin="0px"
    />


    <Button
        android:layout_marginTop="80dp"
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:text="Reporta Puerco"
        android:id="@+id/reporta"
        android:background="@color/white"
        android:onClick="goReportar"
        android:layout_below="@+id/Title"
        android:layout_centerHorizontal="true"
    />



    <Button
        android:layout_marginTop="20dp"
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:text="Busca Puerco"
        android:id="@+id/BuscaP"
        android:background="@color/white"
        android:onClick="goBuscarP"
        android:layout_below="@+id/reporta"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_marginTop="20dp"
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:text="Busca Ley "
        android:id="@+id/BuscaL"
        android:background="@color/white"
        android:onClick="goBuscarL"
        android:layout_below="@+id/BuscaP"
        android:layout_centerHorizontal="true"
    />

</RelativeLayout>
